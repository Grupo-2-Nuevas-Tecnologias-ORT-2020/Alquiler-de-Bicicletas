@model IEnumerable<AlquilerDeBicicletas.Models.TipoDeBici>

    <br><br>

        <div style="background-color:grey;">


            @using (Html.BeginForm())
            {
                List<TipoDeBici> biciList = ViewData["tipoDeBiciList"] as List<TipoDeBici>;

                <div class="btn-group btn-group-justified" role="group">
                    @for (int i = 0; i < biciList.Count(); i++){
                            <div class="btn-group" role="group">
                                <button name="tipoDeBici" class="btn btn-default" value="@biciList[i].tipoDeBiciID">
                                    @Html.DisplayFor(x => biciList[i].nombre)
                                </button>
                            </div>
                     }
                </div>
            }



            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.precioBase)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th>
                            Imagen
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.precioBase)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @{
                                    string dir = item.nombre + ".jpg";
                                }
                                <a asp-controller="Alquileres" asp-action="Create" asp-route-id="">
                                    <img src="~/images/@dir" class="img-responsive" />
                                </a>
                            </td>
                            <td>
                                <a asp-controller="TipoDeBicis" asp-action="Edit" asp-route-id="@item.tipoDeBiciID">Edit</a> |
                                <a asp-controller="TipoDeBicis" asp-action="Details" asp-route-id="@item.tipoDeBiciID">Details</a> |
                                <a asp-controller="TipoDeBicis" asp-action="Delete" asp-route-id="@item.tipoDeBiciID">Delete</a> |
                                <a asp-controller="Alquileres" asp-action="Create" asp-route-id="">Alquilar Ya</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>