@using Microsoft.AspNetCore.Identity;
@using AlquilerDeBicicletas.Areas.Identity.Data;
@inject SignInManager<AlquilerDeBicicletasUsers> SignInManager;
@inject UserManager<AlquilerDeBicicletasUsers> UserManager;


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="navbar-btn">Bienvenido @UserManager.GetUserName(User)</a>
            </li>
            <li>

                <a href="javascript:{}" class="navbar-btn" onclick="document.getElementById('logoutForm').submit();">Cerrar Sesión</a>

            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="navbar-btn">Registrarse</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="navbar-btn">Iniciar Sesión</a></li>
    </ul>
}
